      pipeline {
          environment {
          def mvnHome = tool name: 'maven', type: 'maven'
          }
        agent any  
        stages {
          stage("build & SonarQube analysis") {
            steps {
              withSonarQubeEnv('sonar') {
                sh "${mvnHome}/bin/mvn clean package sonar:sonar"
              }
            }
          }
          stage("Quality Gate") {
            steps {
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
              }
            }
          }
        }
      }
